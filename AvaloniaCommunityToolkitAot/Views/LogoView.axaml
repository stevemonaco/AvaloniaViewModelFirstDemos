<UserControl
    x:Class="AvaloniaCommunityToolkitAot.Views.LogoView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Shared.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:LogoViewModel"
    mc:Ignorable="d">
    <Grid RowDefinitions="auto, *">
        <TextBlock HorizontalAlignment="Center" Text="{Binding Description}" />
        <Image Grid.Row="1" Source="/Assets/avalonia-logo.ico" />
    </Grid>
</UserControl>
